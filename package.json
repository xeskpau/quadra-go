{
  "name": "quadra-go",
  "version": "1.0.0",
  "description": "Sports Center Marketplace - Connect players with sports centers nearby",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "webpack --mode production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage",
    "test:e2e": "cypress run",
    "cypress:open": "cypress open",
    "test:precommit": "jest --bail --findRelatedTests",
    "test:prepush": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":80,\"functions\":80,\"lines\":80,\"statements\":80}}' && npm run test:e2e",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3"
  }
}
